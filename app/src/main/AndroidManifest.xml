<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="exp.glorio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />
        <activity
            android:name=".GeneralActivity"
            android:label="@string/title_activity_general"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.PublicActivity"
            android:label="@string/title_activity_public"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activity.DetailPublicActivity" />
        <activity android:name=".view.activity.PostActivity"></activity>
    </application>

</manifest>