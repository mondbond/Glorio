<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/postGroupLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/postGroupName"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/postGroupLogo"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/postGroupLogo"
                android:layout_toRightOf="@+id/postGroupLogo"
                android:textColor="@color/colorText"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/postText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/postGroupLogo"
                android:layout_alignStart="@+id/postGroupLogo"
                android:layout_below="@+id/postGroupLogo"
                android:layout_marginTop="24dp"
                android:autoLink="web"
                android:linksClickable="true" />

            <TextView
                android:id="@+id/postImageCountAll"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textSize="10dp"
                android:textColor="@color/colorText"
                android:layout_below="@+id/postText"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/postImageCount"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textSize="10dp"
                android:textColor="@color/colorText"
                android:layout_below="@+id/postText"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/postAttachmentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@+id/postImageCount"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp">
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/postAttachmentsContainer"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/postBreakLine" />

            <TextView
                android:id="@+id/postLikeIndex"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_below="@+id/view"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postDate"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:layout_below="@+id/view"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>